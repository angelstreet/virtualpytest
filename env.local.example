# Local Development Environment Configuration
# Copy this to .env for local development: cp env.local.example .env

# =============================================================================
# DATABASE CONFIGURATION - LOCAL POSTGRESQL
# =============================================================================

# Local PostgreSQL (replaces Supabase for development)
DATABASE_URL=postgresql://vpt_user:vpt_local_pass@localhost:5432/virtualpytest
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=virtualpytest
POSTGRES_USER=vpt_user
POSTGRES_PASSWORD=vpt_local_pass

# Supabase Configuration (DISABLED for local development)
# Uncomment these for production deployment
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend Server
SERVER_PORT=5109
SERVER_URL=http://localhost:5109
HOST_PORT=6109
HOST_URL=http://localhost:6109

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# Environment
ENVIRONMENT=development
DEBUG=true
FLASK_ENV=development

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_SECRET_KEY=local-grafana-secret-key-change-in-production
GRAFANA_DOMAIN=localhost

# Grafana Server Settings
GF_SERVER_HTTP_PORT=3001
GF_SERVER_PROTOCOL=http
GF_SERVER_DOMAIN=localhost
GF_SERVER_ROOT_URL=http://localhost:5109/grafana
GF_SERVER_SERVE_FROM_SUB_PATH=true

# Grafana Database (uses local PostgreSQL)
GF_DATABASE_TYPE=postgres
GF_DATABASE_HOST=localhost:5432
GF_DATABASE_NAME=virtualpytest
GF_DATABASE_USER=vpt_user
GF_DATABASE_PASSWORD=vpt_local_pass

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================

# Local Redis for caching and sessions
REDIS_URL=redis://localhost:6379/0
UPSTASH_REDIS_REST_URL=http://localhost:6379
UPSTASH_REDIS_REST_TOKEN=local-development-token

# =============================================================================
# EXTERNAL SERVICES (DEVELOPMENT)
# =============================================================================

# OpenRouter API (for AI features)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Cloudflare R2 (for file storage)
CLOUDFLARE_R2_ENDPOINT=your_r2_endpoint_here
CLOUDFLARE_R2_ACCESS_KEY=your_r2_access_key_here
CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_key_here
CLOUDFLARE_R2_BUCKET=your_r2_bucket_here

# Flask Secret Key
FLASK_SECRET_KEY=local-development-secret-key-change-in-production

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Hot reload and debugging
CHOKIDAR_USEPOLLING=true
PYTHONUNBUFFERED=1
FLASK_DEBUG=1

# Logging
LOG_LEVEL=DEBUG
STRUCTURED_LOGGING=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Vite Development Server
VITE_SERVER_URL=http://localhost:5109
VITE_HOST_URL=http://localhost:6109
VITE_DATABASE_TYPE=postgresql
VITE_ENVIRONMENT=development
