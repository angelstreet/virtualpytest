# VirtualPyTest Backend Host Environment Configuration
# Copy to backend_host/src/: cp setup/docker/hetzner_custom/env.host.example backend_host/src/.env
# Used by: backend_host (hardware/device specific)

# =====================================================
# HOST IDENTIFICATION
# =====================================================
HOST_NAME=hetzner-host-1
HOST_PORT=6109
HOST_URL=http://localhost:6109
HOST_API_URL=http://localhost:6109
SERVER_URL=https://your-backend-server.com

# =====================================================
# DATABASE CONFIGURATION (Supabase - Optional)
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=https://[project].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# =====================================================
# DEVICE CONFIGURATION
# =====================================================
# VNC Configuration (Optional)
# HOST_VNC_STREAM_PATH=https://virtualpytest.com/host/vnc/vnc_lite.html
# HOST_VNC_PASSWORD=your-vnc-password

# Video Capture Configuration (Optional)
# HOST_VIDEO_CAPTURE_PATH=/var/www/html/stream/capture
# HOST_WEB_BROWSER_PATH=/usr/bin/chromium

# Power Control (Optional - TAPO Smart Plug)
# HOST_POWER_NAME=TAPO_P100
# HOST_POWER_IP=192.168.1.220
# HOST_POWER_EMAIL=your-email@example.com
# HOST_POWER_PWD=your-password

# =====================================================
# DEVICE 1 CONFIGURATION
# =====================================================
DEVICE1_NAME=Samsung_TV_1
DEVICE1_MODEL=android_mobile
DEVICE1_VIDEO=/dev/video0
DEVICE1_VIDEO_STREAM_PATH=/host/stream/capture1
DEVICE1_VIDEO_CAPTURE_PATH=/var/www/html/stream/capture1
DEVICE1_VIDEO_FPS=10
DEVICE1_VIDEO_AUDIO=plughw:2,0

# Network Configuration (for Android/Network devices)
DEVICE1_IP=192.168.1.100
DEVICE1_PORT=5555

# Power Control (Optional)
# DEVICE1_POWER_NAME=TAPO_P100_Device1
# DEVICE1_POWER_IP=192.168.1.221
# DEVICE1_POWER_EMAIL=your-email@example.com
# DEVICE1_POWER_PWD=your-password

# =====================================================
# ADDITIONAL DEVICES (Optional)
# =====================================================
# Copy the DEVICE1 configuration and change to DEVICE2, DEVICE3, etc.
# DEVICE2_NAME=LG_TV_2
# DEVICE2_MODEL=lg_webos
# DEVICE2_VIDEO=/dev/video1
# ...
