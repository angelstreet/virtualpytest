# VirtualPyTest Backend Host Environment Configuration
# Copy this file to .env: cp env.example .env
# Used by: backend_host (hardware/device specific)
# Note: Project-level .env is loaded first, then this file

# =====================================================
# HOST IDENTIFICATION
# =====================================================
HOST_NAME=your-host-name
HOST_PORT=6409

# =====================================================
# DEVICE CONFIGURATION
# =====================================================
# Android device settings
ANDROID_DEVICE_ID=your_android_device_id
ADB_SERVER_HOST=localhost
ADB_SERVER_PORT=5037

# Power management device
TAPO_DEVICE_IP=192.168.1.100
TAPO_USERNAME=your_tapo_username
TAPO_PASSWORD=your_tapo_password

# =====================================================
# HARDWARE SETTINGS
# =====================================================
DISPLAY=:99
VNC_PORT=5900
NOVNC_PORT=6080

# =====================================================
# ENVIRONMENT
# =====================================================
ENVIRONMENT=development
DEBUG=true
