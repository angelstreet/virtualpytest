[Unit]
Description=Archive Manifest Generator (24h HLS manifests)
After=network.target

[Service]
Type=simple
User=cpeengineering
WorkingDirectory=/Users/cpeengineering/virtualpytest/backend_host/scripts
Environment="PATH=/Users/cpeengineering/virtualpytest/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/Users/cpeengineering/virtualpytest/venv/bin/python3 /Users/cpeengineering/virtualpytest/backend_host/scripts/archive_manifest_generator.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

