# VirtualPyTest Project-Level Environment Configuration
# Copy this file to .env: cp env.example .env
# Used by: backend_server, backend_core, shared

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_DB_URI=postgresql://postgres:[YOUR-PASSWORD]@db.dddddddddddddd.supabase.co:5432/postgres
# =====================================================
# STORAGE CONFIGURATION  
# =====================================================
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_PUBLIC_URL=https://pub-your-bucket-id.r2.dev

# =====================================================
# AI CONFIGURATION
# =====================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =====================================================
# SERVER CONFIGURATION
# =====================================================
SERVER_URL=http://192.168.1.x:5109
SERVER_PORT=5109
FLASK_SECRET_KEY=your_flask_secret_key_here

# =====================================================
# GRAFANA MONITORING (backend_server)
# =====================================================

# VirtualPyTest Application Database
VIRTUALPYTEST_DB_HOST=localhost
VIRTUALPYTEST_DB_PORT=5432
VIRTUALPYTEST_DB_NAME=virtualpytest
VIRTUALPYTEST_DB_USER=virtualpytest_user
VIRTUALPYTEST_DB_PASSWORD=your_local_db_password_here
VIRTUALPYTEST_DB_URI=postgresql://virtualpytest_user:your_local_db_password_here@localhost:5432/virtualpytest

# Grafana Metrics Database (local)
GRAFANA_DB_HOST=localhost
GRAFANA_DB_PORT=5432
GRAFANA_DB_NAME=grafana_metrics
GRAFANA_DB_USER=grafana_user
GRAFANA_DB_PASSWORD=your_grafana_db_password_here
GRAFANA_DB_URI=postgresql://grafana_user:your_grafana_db_password_here@localhost:5432/grafana_metrics

# Grafana Admin Password (local installation)
# Note: This overrides GRAFANA_ADMIN_PASSWORD from the main section for local setup
LOCAL_GRAFANA_ADMIN_PASSWORD=your_secure_admin_password_here
# =====================================================
# ENVIRONMENT
# =====================================================
ENVIRONMENT=development
DEBUG=1

# =====================================================
# DISCARD REDIS
# =====================================================
UPSTASH_REDIS_REST_URL="https://learning-coxxxbra-xxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="xxxxx"
