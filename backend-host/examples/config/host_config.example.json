{
  "host_name": "raspberrypi",
  "host_id": "rpi1",
  "capture_devices": [
    {
      "device_id": "device1",
      "video_device": "/dev/video0",
      "audio_device": "plughw:2,0",
      "capture_dir": "/var/www/html/stream/capture1",
      "fps": 10,
      "enabled": true,
      "description": "Main HDMI capture device"
    },
    {
      "device_id": "device2", 
      "video_device": "/dev/video2",
      "audio_device": "plughw:3,0",
      "capture_dir": "/var/www/html/stream/capture2",
      "fps": 10,
      "enabled": false,
      "description": "Secondary capture device (disabled)"
    }
  ],
  "monitoring": {
    "analysis_interval": 3,
    "cleanup_interval": 300,
    "max_log_size_mb": 30,
    "blackscreen_threshold": 10,
    "freeze_threshold": 0.5,
    "audio_threshold_percentage": 5
  },
  "directories": {
    "scripts": "./backend-host/scripts",
    "logs": "/tmp",
    "venv": "~/myvenv/bin/activate",
    "stream_base": "/var/www/html/stream"
  },
  "ffmpeg": {
    "video_size": "1024x768",
    "stream_scale": "640x360",
    "preset": "veryfast",
    "crf": 28,
    "maxrate": "1200k",
    "bufsize": "2400k",
    "audio_bitrate": "64k",
    "hls_time": 2,
    "hls_list_size": 5
  },
  "alerts": {
    "database_enabled": true,
    "r2_upload_enabled": true,
    "consecutive_threshold": 3,
    "incident_types": ["blackscreen", "freeze", "audio_loss"]
  }
} 